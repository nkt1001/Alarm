<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin">

        <TextView
            android:id="@+id/tv_alarm_item_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gguhoioi"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_alarm_item_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alarm_item_alias"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/radius"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_alarm_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="nb87giub"
            android:layout_below="@id/tv_alarm_item_radius"
            android:layout_toLeftOf="@+id/alarm_switch"
            android:layout_toStartOf="@+id/alarm_switch"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Switch
            android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_alarm_item_info"
            android:layout_alignEnd="@+id/tv_alarm_item_radius"
            android:layout_alignRight="@+id/tv_alarm_item_radius"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <Button
            android:id="@+id/dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_alarm_item_info"
            android:text="@string/dismiss_now"
            style="@style/Widget.AppCompat.Button.Colored"
            android:drawablePadding="@dimen/text_compound_drawable_padding"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
